(defun main ()
  (let* ((arg (car command-line-args-left))
	 (num (if arg (string-to-number arg) 1)))
    (let ((buf (get-buffer-create "mybuf"))
	  (str ""))
      (dotimes (iter num)
	(insert-string "hello\n" buf))
      (princ (format "%d\n" (length (buffer-substring nil nil buf)))))))
