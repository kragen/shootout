SPLITFILE := ../../../bin/split_file.bash

COPTS := -O3 -fomit-frame-pointer -march=athlon-tbird

# Eiffel needs a little work to get it going ...
SmartEiffelPath := /usr/lib/smarteiffel
SE := $(SmartEiffelPath)/bin/compile
CLEAN_SE := $(SmartEiffelPath)/bin/clean
SE_OPTS :=  -boost -no_split $(COPTS) $(SE_OPTS)
HIPE_OPTS := +native +"{hipe, [o3]}"

CLEANOPTS := -b -nt -l /usr/lib/clean/lib/ArgEnv/ArgEnvC.o -I /usr/lib/clean/lib/ArgEnv \
 -I /usr/lib/clean/lib/stdenv -I ../../Include/clean $(CLEANOPTS)

BIGLOOOPTS := -fsharing -Obench -unsafe $(BIGLOOOPTS)
CHICKENOPTS := -O3 -d0 -lambda-lift -b $(CHICKENOPTS) -C "$(COPTS) -fno-strict-aliasing"
DLANGOPTS := -O -inline -release $(DLANGOPTS)
FLXOPTS := -c --optimize --static
FPCOPTS := -XX -Xs -O3p3r -Fi../../Include/fpascal -Fu../../Include/fpascal -I../../Include/fpascal $(FPCOPTS)
G95OPTS := -pipe -Wall $(COPTS) $(G95OPTS)
GCCOPTS := -pipe -Wall $(COPTS) $(GCCOPTS)
GCJOPTS := $(COPTS) $(GCJOPTS)
GFORTRANOPTS := -pipe -Wall $(COPTS) $(GFORTRANOPTS)
GHCOPTS  := -O3 -optc-O3 -fglasgow-exts $(GHCOPTS) -optc-march=athlon-tbird
GIJCOPTS := -C
GNATOPTS := -gnatp -Wall $(COPTS) $(GNATOPTS)
GXXOPTS := -pipe -Wall $(COPTS) $(GXXOPTS)
GXXLDOPTS := -L/usr/local/lib $(GXXLDOPTS)
ICCOPTS := -O3 -ip -static -unroll $(ICCOPTS)
IFCOPTS := -O3 -static-libcxa -Wl,-rpath,/opt/intel/fc/9.0/lib $(IFCOPTS)
ICPPOPTS := -O3 -ip -static -unroll $(ICPPOPTS)
IRON_FLAGS := -O $(IRON_FLAGS)
OCAMLOPTS := -noassert -unsafe -I /usr/lib/ocaml/contrib -ccopt -O3 -ccopt -fomit-frame-pointer -ccopt -march=athlon-tbird $(OCAMLOPTS)
OCAMLBOPTS := -noassert -unsafe -I /usr/lib/ocaml/contrib $(OCAMLBOPTS)
OCTAVEOPTS := -q -f $(OCTAVEOPTS)
OBJCOPTS := -pipe -Wall $(COPTS) -lobjc $(OBJCOPTS)
OO2COPTS := -A --no-rtc --cflags "$(COPTS)"
PARROTOPTS := -j $(PARROTOPTS)
POLYOPTS := -q $(POLYOPTS)
STALINOPTS := -I /usr/lib/stalin -Ob -Om -On -Or -Ot -copt -O3 -copt -fomit-frame-pointer -copt -Wall -copt -freg-struct-return -copt -march=athlon-tbird $(STALINOPTS)
TCCOPTS := -pipe -Wall $(COPTS) $(TCCOPTS)
XDSOPTS := =m =a $(XDSOPTS) ../../Include/xds/Shootout


