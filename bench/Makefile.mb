# scala
########################################
%.scala_run: $(MB_SRCDIR)/%.scala $(SCALAC)
	-@rm -rf $@ 
	-( if [ ! -d $@ ] ; then mkdir $@ ; fi)
	-cp $< $@/$(TEST).scala
	-( cd $@ ; $(SCALAC) -target:jvm-1.5 -Xcloselim $(TEST).scala )
	-touch $@


########################################
# SmartEiffel
########################################
%.e: $(MB_SRCDIR)/%.se $(SE)
	-@echo "copying $< to $(TEST).e"
	-cp $< $(TEST).e
	-$(SPLITFILE) $< $(TEST).e

%.se_run: %.e
	-rm -f $@
	-$(SE) $(SE_OPTS) -o $@ $(TEST) ; $(CLEAN_SE) $*
	-@rm -f $*.o

