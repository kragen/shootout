<span class="kwa">object</span> revcomp <span class="sym">{</span>
   <span class="kwa">def</span> main<span class="sym">(</span>args<span class="sym">:</span> <span class="kwc">Array</span><span class="sym">[</span><span class="kwc">String</span><span class="sym">]) = {</span>
      <span class="kwa">val</span> out <span class="sym">=</span> <span class="kwa">new</span> FastaOutputStream<span class="sym">(</span><span class="kwc">System</span><span class="sym">.</span>out<span class="sym">)</span>
      <span class="kwa">val</span> in <span class="sym">=</span> <span class="kwa">new</span> FastaInputStream<span class="sym">(</span><span class="kwc">System</span><span class="sym">.</span>in<span class="sym">)</span>

      out<span class="sym">.</span>writeReverseComplement<span class="sym">(</span> in<span class="sym">.</span>readSequenceStack <span class="sym">)</span>
      out<span class="sym">.</span>writeReverseComplement<span class="sym">(</span> in<span class="sym">.</span>readSequenceStack <span class="sym">)</span>
      out<span class="sym">.</span>writeReverseComplement<span class="sym">(</span> in<span class="sym">.</span>readSequenceStack <span class="sym">)</span>

