        end if
        do i<span class="sym">=</span><span class="num">1</span><span class="sym">,</span>m
           buff<span class="sym">(</span>i<span class="sym">:</span>i<span class="sym">) =</span> selectRandom<span class="sym">(</span>a<span class="sym">)</span>
